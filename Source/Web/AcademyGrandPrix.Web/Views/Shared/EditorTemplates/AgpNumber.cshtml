@model double?

<div class="form-group">
    <div class="col-md-2">
        @Html.LabelFor(m => m)
    </div>
    <div class="col-md-5">
        @Html.TextBoxFor(m => m, new { @class = "form-control", @type = "number" })
    </div>
    <div>
        @Html.ValidationMessageFor(m => m)
    </div>
</div>