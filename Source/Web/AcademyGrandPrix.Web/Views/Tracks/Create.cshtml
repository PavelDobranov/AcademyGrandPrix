@model AcademyGrandPrix.Web.ViewModels.Tracks.CreateTrackViewModel
@{
    ViewBag.Title = "Create Track";
}

<h2>View</h2>

@using (@Html.BeginForm("Create", "Tracks", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    @Html.EditorFor(m => m.Name);
    @Html.EditorFor(m => m.Length);
    @Html.EditorFor(m => m.Difficulty);

    <div class="form-group">
        <div class="col-md-2">
            <strong>Map</strong>
        </div>
        <div class="col-md-5">
            <input type="file" name="UploadedImage" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-5 col-md-offset-2">
            <input type="submit" class="btn btn-default" />
        </div>
    </div>
}

@section scripts {
    @Scripts.Render("~/bundles/jqueryval");
}
